<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Upload and View PDFs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0;
            padding: 20px;
            background-color: #f7f7f7;
        }
        .container {
            text-align: center;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            margin-bottom: 20px;
        }
        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        input[type="file"], input[type="text"], select, button {
            padding: 10px;
            margin: 10px 0;
            font-size: 16px;
            width: 100%;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        iframe {
            width: 100%;
            height: 600px;
            border: none;
            margin-top: 20px;
            display: none; /* Initially hidden */
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Upload a File</h1>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <input type="file" name="file" required />
            <button type="submit">Upload</button>
        </form>

        <h1>Create a Folder</h1>
        <form action="/create-folder" method="POST">
            <input type="text" name="folderName" placeholder="Enter folder name" required />
            <button type="submit">Create Folder</button>
        </form>

        <h1>View PDFs</h1>
        <select id="pdf-list" onchange="viewPDF()">
            <option value="">Select a PDF</option>
        </select>
        <button onclick="refreshPDFList()">Refresh PDF List</button>
    </div>

    <iframe id="pdf-viewer"></iframe>

    <script>
        async function fetchPDFs() {
            try {
                const response = await fetch('/list-pdfs');
                return await response.json();
            } catch (error) {
                console.error('Error fetching PDFs:', error);
                return [];
            }
        }

        async function refreshPDFList() {
            const pdfList = document.getElementById('pdf-list');
            pdfList.innerHTML = '<option value="">Select a PDF</option>'; // Clear previous list

            const pdfs = await fetchPDFs();
            pdfs.forEach(pdf => {
                const option = document.createElement('option');
                option.value = pdf.url;
                option.textContent = pdf.name;
                pdfList.appendChild(option);
            });
        }

        function viewPDF() {
            const pdfViewer = document.getElementById('pdf-viewer');
            const selectedPDF = document.getElementById('pdf-list').value;

            if (selectedPDF) {
                pdfViewer.src = selectedPDF;
                pdfViewer.style.display = 'block'; // Show iframe
            } else {
                pdfViewer.style.display = 'none'; // Hide iframe
            }
        }

        // Load PDF list on page load
        window.onload = refreshPDFList;
    </script>

</body>
</html>